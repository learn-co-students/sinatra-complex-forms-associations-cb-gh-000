<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <div>
    <label>Name</label>
    <input type="text" id="pet_name" name="pet[name]">
  </div>
  <div>
    <label>Choose an existing owner</label>
    <% Owner.all.each do |owner| %>
      <input type="checkbox" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>">
      <%= owner.name %>
    <% end %>
  </div>
  <div>
    <label>or/and create a new owner</label>
    <input type="text" id="owner_name" name="owner[name]">
  </div>
  <button>Create Pet</button>
</form>
